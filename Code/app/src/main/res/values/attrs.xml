<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="color_picker">
        <!-- 背景圆的半径 -->
        <attr name="circle_radius" format="dimension" />
        <!--小球描边宽度-->
        <attr name="center_stroke_width" format="dimension" />
        <!--小球是否描边-->
        <attr name="center_is_stroke" format="boolean" />
        <!-- 可滑动小球的半径 -->
        <attr name="center_radius" format="dimension" />
        <!-- 可滑动小球的颜色 -->
        <attr name="center_color" format="color" />
    </declare-styleable>

    <declare-styleable name="font_text">
        <attr name="font_path" format="string"/>
    </declare-styleable>
</resources>