<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="10"
    android:rowCount="9" >

    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_row="8"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorLightGray"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:layout_columnWeight="0.8"
        android:layout_rowWeight="1"
        android:text="@string/move" />

    <ImageButton
        android:id="@+id/draw_move_up"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:layout_columnWeight="0.8"
        android:layout_rowWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/move_up" />

    <ImageButton
        android:id="@+id/draw_move_down"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_column="2"
        android:layout_row="6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:layout_columnWeight="0.8"
        android:layout_rowWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/move_down" />

    <ImageButton
        android:id="@+id/draw_move_left"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:layout_columnWeight="0.8"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/move_left" />

    <ImageButton
        android:id="@+id/draw_move_right"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:layout_columnWeight="0.8"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/move_right" />

    <ImageView
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_column="4"
        android:layout_row="4"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/draw_move_expand"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"
        android:layout_column="5"
        android:layout_row="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:paddingTop="@dimen/small_margin"
        android:layout_columnWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/expand" />

    <ImageButton
        android:id="@+id/draw_move_shrink"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"
        android:layout_column="5"
        android:layout_row="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:paddingBottom="@dimen/small_margin"
        android:layout_columnWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/shrink" />

    <ImageView
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="9"
        android:layout_column="6"
        android:layout_row="0"
        android:layout_columnWeight="0.2"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/draw_move_rotateleft"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"
        android:layout_column="7"
        android:layout_row="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:paddingTop="@dimen/small_margin"
        android:layout_columnWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/rotate_counterclock" />

    <ImageButton
        android:id="@+id/draw_move_rotateright"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"
        android:layout_column="7"
        android:layout_row="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:paddingBottom="@dimen/small_margin"
        android:layout_columnWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/rotate_clock" />

    <ImageView
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="9"
        android:layout_column="8"
        android:layout_row="0"
        android:layout_columnWeight="0.2"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/draw_move_flip_h"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"
        android:layout_column="9"
        android:layout_row="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:paddingTop="@dimen/small_margin"
        android:layout_columnWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/flip_horizontal" />

    <ImageButton
        android:id="@+id/draw_move_flip_v"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"
        android:layout_column="9"
        android:layout_row="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/tiny_margin"
        android:paddingBottom="@dimen/small_margin"
        android:layout_columnWeight="1"
        android:background="@drawable/ripple_bg_nolimit_trans_small"
        android:tint="@color/colorLightGray"
        android:scaleType="fitCenter"
        android:src="@mipmap/flip_vertical" />

</GridLayout>