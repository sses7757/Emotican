<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="2"
    android:visibility="visible">

    <com.emotican.customview.ColorPickView
        android:id="@+id/draw_color_pick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="0.6"
        android:layout_rowSpan="2"
        android:layout_gravity="center"
        colorpicker:center_color="@color/colorLightGray"
        colorpicker:center_radius="@dimen/view_small_radius"
        colorpicker:center_is_stroke="true"
        colorpicker:center_stroke_width="@dimen/view_small_strok_width"
        colorpicker:circle_radius="@dimen/view_big_radius"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="0.25"
        android:layout_rowWeight="1"
        android:layout_rowSpan="1"
        android:gravity="end|center_vertical"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorLightGray"
        android:text="@string/gray" />

    <SeekBar
        android:id="@+id/draw_color_gray"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="1"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:progressDrawable="@drawable/seekbar_gradient"
        android:thumbTint="@color/colorLightBlue"
        android:max="255"
        android:progress="127"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnWeight="0.25"
        android:layout_rowWeight="1"
        android:layout_rowSpan="1"
        android:gravity="end|center_vertical"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorLightGray"
        android:text="@string/alpha" />

    <SeekBar
        android:id="@+id/draw_color_alpha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="1"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bg_trans_blocks"
        android:progressDrawable="@drawable/seekbar_alpha_gradient"
        android:thumbTint="@color/colorLightBlue"
        android:max="255"
        android:progress="127"/>

    <ImageView
        android:id="@+id/draw_color_show"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="1"
        android:layout_rowSpan="2"
        android:layout_marginBottom="@dimen/larger_margin"
        android:layout_marginTop="@dimen/larger_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:src="@color/colorAccent" />

</GridLayout>